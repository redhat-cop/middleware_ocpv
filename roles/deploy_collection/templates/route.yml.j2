kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: {{ collection_name }}
  namespace: {{ collection_namespace }}
spec:
  to:
    kind: Service
    name: {{ collection_name }}
    weight: 100
  port:
    targetPort: 8080
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None